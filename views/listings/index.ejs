<% layout("/layouts/boilerplate") -%>

<!--  Title Section -->
<div class="text-center my-4">
  <h1 class="fw-bold animate__animated animate__fadeIn">
    Find Your Perfect Stay
  </h1>
  <p class="text-muted">Handpicked destinations from around the world.</p>
</div>

<!--Grid -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% for (let listing of allListings) { %>
  <div class="col" data-aos="fade-up">
    <a
      href="/listings/<%= listing._id %>"
      class="text-decoration-none text-dark">
      <div class="card h-100 border-0 shadow-sm listing-card">
        <!--  Listing Image -->
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing"
          style="height: 250px; object-fit: cover" />

        <!--Info -->
        <div class="card-body">
          <h5 class="card-title fw-semibold"><%= listing.title %></h5>
          <p class="card-text mb-1">
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
          <p class="card-text text-muted">
            <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>
    </a>
  </div>
  <% } %>
</div>
