<% layout("/layouts/boilerplate") -%>

<!--  Page Header -->
<div class="text-center my-5" data-aos="fade-down">
  <h2 class="fw-bold">Create a New Stay </h2>
  <p class="text-muted">Fill in the details to list your unique getaway!</p>
</div>

<!--  Form Section -->
<div class="row justify-content-center">
  <div class="col-md-8" data-aos="zoom-in-up">
    <form
      method="POST"
      action="/listings"
      class="shadow-lg p-4 rounded-4 bg-white">
      <!--  Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          required
          name="listing[title]"
          type="text"
          placeholder="e.g., Luxury Treehouse in Manali"
          class="form-control form-control-lg" />
      </div>

      <!--  Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          required
          name="listing[description]"
          placeholder="Write a short description"
          class="form-control"
          rows="3"></textarea>
      </div>

      <!--  Image URL -->
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          required
          name="listing[image]"
          type="text"
          placeholder="e.g., https://images.unsplash.com/..."
          class="form-control" />
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label">Price (INR)</label>
        <input
          required
          name="listing[price]"
          type="number"
          placeholder="e.g., 2500"
          class="form-control" />
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          required
          name="listing[country]"
          type="text"
          placeholder="e.g., India"
          class="form-control" />
      </div>

      <!--  Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          required
          name="listing[location]"
          type="text"
          placeholder="e.g., Goa, Mumbai, Udaipur"
          class="form-control" />
      </div>

      <!-- Submit Button -->
      <div class="text-center mt-4">
        <button
          class="btn btn-dark px-5 py-2 animate__animated animate__pulse animate__infinite">
          <i class="fa-solid fa-plus me-2"></i>Add Listing
        </button>
      </div>
    </form>
  </div>
</div>
