<% layout("/layouts/boilerplate") -%>

<!--  Page Title -->
<div class="text-center mt-5" data-aos="fade-down">
  <h2 class="fw-bold"><%= listing.title %></h2>
  <p class="text-muted">Explore the destination</p>
</div>

<!--  Main Listing Card -->
<div class="row justify-content-center my-4">
  <div class="col-md-8" data-aos="zoom-in">
    <div class="card shadow-lg border-0 rounded-4 p-3 show-card">
      <!--  Listing Image -->
      <img
        src="<%= listing.image.url %>"
        alt="listing image"
        class="card-img-top rounded-3"
        style="max-height: 450px; object-fit: cover" />

      <!--  Listing Info -->
      <div class="card-body">
        <h4 class="card-title fw-semibold mt-3">
          <i class="fa-solid fa-location-dot me-1 text-danger"></i>
          <%= listing.location %>, <%= listing.country %>
        </h4>
        <p class="card-text fs-6 text-muted mt-2"><%= listing.description %></p>
        <h5 class="mt-3">
          Price:
          <span class="text-success"
            >&#8377; <%= listing.price.toLocaleString("en-IN") %></span
          >
          / night
        </h5>
      </div>
    </div>
  </div>
</div>
<!--  Buttons Row -->
<div class="row justify-content-center mb-5">
  <div class="col-md-8 text-center d-flex justify-content-between">
    <!--  Edit Button -->
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-outline-dark px-4 py-2 me-2 animate__animated animate__fadeInLeft">
      <i class="fa-solid fa-pen-to-square me-1"></i> Edit
    </a>

    <!--  Delete Button -->
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=DELETE"
      class="animate__animated animate__fadeInRight">
      <button class="btn btn-outline-danger px-4 py-2">
        <i class="fa-solid fa-trash me-1"></i> Delete
      </button>
    </form>
  </div>
</div>
